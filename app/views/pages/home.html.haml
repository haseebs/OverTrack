    %div.intro-message
      %h1.main-heading
        OverTracker Personal Game Stats Tracker
      %h3.main-heading-desc
        You gonna perform better if you know where to push

      - unless logged_in?
        %div.container
          %div.col-sm-6.col-sm-offset-3
            %div.col-sm-6
              %button.csbuttons.c-btn.c-btn--primary.c-btn-home #{link_to "Login", login_path}
            %div.col-sm-6
              %button.csbuttons.c-btn.c-btn--primary.c-btn-home #{link_to "Sign up", signup_path}
      - if logged_in?
        %div.container
          %div.col-sm-10.col-sm-offset-1
            = render 'pages/summary'
